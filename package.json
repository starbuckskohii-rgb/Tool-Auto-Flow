{
  "name": "tool-auto-flow",
  "version": "1.0.2",
  "description": "Tool kịch bản auto flow",
  "main": "electron.js",
  "author": "StarbucksKohii",
  "license": "UNLICENSED",
  "homepage": "https://github.com/starbuckskohii-rgb/Tool-Auto-Flow#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/starbuckskohii-rgb/Tool-Auto-Flow.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.1.5",
    "electron-updater": "^6.1.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.starbuckskohii.autoflow",
    "productName": "Tool Auto Flow",
    "publish": [
      {
        "provider": "github",
        "owner": "starbuckskohii-rgb",
        "repo": "Tool-Auto-Flow"
      }
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "deleteAppDataOnUninstall": true
    }
  }
}
